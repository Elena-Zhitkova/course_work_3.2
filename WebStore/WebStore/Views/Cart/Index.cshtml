@model IEnumerable<CartItem>
@{
    ViewData["Title"] = "Index";
}
<h1>Корзина</h1>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th></th>
            <th>
                Количество
            </th>
            <th>
                Стоимость
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/product_image/@item.Product.Image" alt="No image"
                         width="100" />
                </td>
                <td>
                    @Html.DisplayFor(m => item.Product.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a asp-controller="Cart"
                       asp-action="Delete"
                       asp-route-id="@item.Product.ProductId"
                       class="btn btn-outline-danger">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
        }

    </tbody>
    <div class="form-group">
        <a class="btn btn-dark" asp-controller="Order" asp-action="Index"> Мысленно купить </a>
        <!--
            
        <button type="submit" class="btn btn-dark" asp-controller="Order" asp-action="Index">Мысленно купить</button>
        -->
    </div>
</table>