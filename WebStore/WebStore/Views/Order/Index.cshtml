@model IEnumerable<WebStore.Entities.Order>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h4>Введите ваши данные и наш менеджер перезвонит для уточнения заказа.</h4>
                <hr />
                <div class="text-danger"></div>
                <div class="form-group">
                    <label>Адрес доставки</label>
                    <input class="form-control" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Ваш номер телефона</label>
                    <input class="form-control" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-dark">Закончить оформление заказа</button>
                </div>
            </form>
        </section>
    </div>
</div>
